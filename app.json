{
  "expo": {
    "name": "AptosPay",
    "slug": "aptospay-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*"
    ],
    "assetBundlePatternsWeb": [
      "**/*.png",
      "**/*.jpg",
      "**/*.jpeg",
      "**/*.gif",
      "**/*.svg",
      "**/*.webp",
      "**/*.ico"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "name": "AptPay",
      "shortName": "AptPay",
      "lang": "en",
      "scope": "/",
      "themeColor": "#007AFF",
      "description": "Advanced DeFi trading platform on Aptos blockchain",
      "dir": "ltr",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": "/",
      "backgroundColor": "#f8f9fa",
      "output": "static",
      "publicPath": "./"
    },
    "plugins": [
      "expo-camera",
      "expo-barcode-scanner"
    ]
  }
}